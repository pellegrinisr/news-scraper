<div class="container">

    <h1>Articles</h1>

    {{#each articles}}
        <div class="article">
            <h2><a href={{link}} target="_blank">{{headline}}</a></h2>
            <p>{{summary}}</p>     
            <p>{{byline}}</p>
        </div>
        <div class="comments">
            <h3>Comments</h3>
            {{#each comments}}
                <div class="single-comment">
                    <p>{{name}}</p>
                    <p>{{body}}</p>
                    <p>{{date}}</p>
                </div>
            {{/each}}
            <form id={{_id}}>
                <div class="form-group">
                    <label for="name">Name</label><span class="pl-3 error" id="name-error">Name is required.</span>
                    <input type="text" class="form-control name">
                    <label for="comment">Comment</label> <span class="pl-3 error" id="body-error">Comment body cannot be blank.</span>
                    <textarea class="form-control comment"></textarea>
                </div>
                <button type="submit" class="btn btn-secondary">Post</button>
            </form>
        </div>
    {{/each}}
</div>